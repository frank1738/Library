<section class="bg-gray-50 h-fit dark:bg-gray-900 mt-1 pt-10">
  <div class="flex flex-col items-center justify-center lg:py-0">
    <a href="#" class="flex font-sans items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
      <%= image_tag('book.png', class: 'h-8 w-8 mr-2', alt: 'logo') %>
      ShelfWise
    </a>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Create your account
        </h1>
        <%= form_for(resource, as: resource_name, class: 'space-y-4 md:space-y-6', url: registration_path(resource_name)) do |f| %>
          <% if resource.errors.any? %>
            <%= render 'layouts/alertreg' %>
          <% end %>
          <div>
            <%= f.label :Username, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
            <%= f.text_field :username, autofocus: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
          </div>
          <div class='mt-3'>
            <%= f.label :Email, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
            <%= f.email_field :email, autocomplete: 'current-password', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
          </div>
          <div class='mt-3'>
            <%= f.label :Password, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: 'current-password', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
          </div>
          <div class="field">
            <%= f.hidden_field :role, value: "member" %>
          </div>
          <div class='mt-3'>
            <%= f.label :Confirm_password, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
            <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
          </div>
          <%= f.submit "Sign up", class:"w-full cursor-pointer mt-10 text-white bg-blue-700  hover:bg-blue-800  focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
          <p class="text-sm font-light mt-5 text-gray-500 dark:text-gray-400">
            Already have account?
            <%= link_to "Sign in", new_session_path(resource_name),  class:"font-medium text-blue-700 hover:text-blue-800  hover:underline dark:text-primary-500" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
