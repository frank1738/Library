<div class="max-w-sm bg-white border border-gray-200  shadow dark:bg-gray-800 dark:border-gray-700">
  <img class="img w-full" src="<%= category.image_url %>" alt="" />
  <div class="p-5">
    <a href="#">
      <h5 class="mb-2 font-serif text-2xl font-bold tracking-tight text-textColor dark:text-white"><%= category.name %></h5>
    </a>
    <div class="inline-flex rounded-lg items-center px-3 py-2 text-sm font-medium text-center text-white button  focus:outline-none">
      <%= link_to "visit", category %>
      <svg class="w-3.5 h-3.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
      </svg>
    </div>
  </div>
</div>
