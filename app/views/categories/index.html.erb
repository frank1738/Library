<section class=' flex flex-col items-center justify-center px-4'>
  <h1 class='mt-6 text-center text-gray-700 font-serif mb-16 text-5xl  md:text-6xl xl:text-7xl'>Available <br/>
    categories</h1>
  <% if current_user.admin? %>
    <%= link_to "Create a New Category", new_category_path, class:"text-textColor mb-11 shadow-lg dark:shadow-lg  font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 button" %>
  <% end %>
  <div id="categories" class='container grid md:grid-cols-3 gap-4 py-10'>
    <% @categories.each do |category| %>
      <%= render category %>
    <% end %>
  </div>
</section>
