<section class="bg-gray-50 dark:bg-gray-900 mt-5">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
      <%= image_tag('book.png', class: 'h-8 w-8 mr-2', alt: 'logo') %>
      ShelfWise
    </a>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Edit this book
        </h1>
        <%= form_with(model: book,class: 'space-y-4 md:space-y-6') do |f| %>
          <div>
            <%= f.label :Title, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
            <%= f.text_field :title, autofocus: true, autocomplete: "email", class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', required:true %>
          </div>
          <div class='mt-5'>
            <%= f.label :Author, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
            <%= f.text_field :author,  autocomplete: 'current-password', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500',required:true %>
          </div>
          <div class='mt-5'>
            <%= f.label :Image_Url, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
            <%= f.text_field :image_url,  autocomplete: 'current-password', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500',required:true %>
          </div>
          <div class='mt-5'>
            <%= f.label :Category, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
            <%= f.select :category_id, Category.all.map { |category| [category.name, category.id] }, { required: true }, class: 'block border-gray-300  w-full p-2.5 mt-2 bg-white border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300' %>
          </div>
          <div class='mt-5'>
            <%= f.submit "Edit this book", class:"w-full cursor-pointer mt-5 text-white bg-blue-700  hover:bg-blue-800  focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
